<% if flash[:errors] %>
  <ul>
  <% flash[:errors].each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
<% end %>
<form action=<%= tracks_url %> method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
  <label for="album_selector">Album name:</label>
  <select name="track[album_id]" id="album_selector">
    <% @albums.each do |album| %>
    <option value="<%= album.id %>"> <%= album.name %></option>
    <% end %>
  </select><br><br>
  <label>Track name:
  <input type="text" name="track[name]"></label>
  <br><br>
  <label>Bonus
  <input type="checkbox" name="track[bonus]" value="true"></label>
  <br>
  <textarea name="track[lyrics]"></textarea><br>
  <input type="submit" value="submit">

</form>
