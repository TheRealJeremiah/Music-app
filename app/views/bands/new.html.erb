<% if flash[:errors] %>
  <ul>
  <% flash[:errors].each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
<% end %>
<form action=<%= bands_url %> method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
  <label>Band name:
  <input type="text" name="band[name]"></label>
  <br><br>
  <input type="submit" value="submit">
</form>
